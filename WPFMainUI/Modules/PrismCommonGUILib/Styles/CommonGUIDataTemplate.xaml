<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:PrismCommonGUILib.Styles">

    <ItemsPanelTemplate x:Key="MenuButtonPanelTemplate">
        <StackPanel/>
    </ItemsPanelTemplate>
    
    <DataTemplate x:Key="MenuButtonTemplate">
        <DockPanel Margin="0,5,0,5">
            <Label DockPanel.Dock="Left" Background="Red" Width="10"/>
            <ToggleButton Style="{Binding MenuStyle}"/>
        </DockPanel>
    </DataTemplate>
</ResourceDictionary>